<p id="notice"><%= notice %></p>

<h1>Translations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Owner</th>
      <th>Source url</th>
      <th>Contributors</th>
      <th>Source lang</th>
      <th>Priority</th>
      <th>Original content</th>
      <th>Translated contents</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @translations.each do |translation| %>
      <tr>
        <td><%= translation.name %></td>
        <td><%= translation.status %></td>
        <td><%= translation.owner %></td>
        <td><%= translation.source_url %></td>
        <td><%= translation.contributors %></td>
        <td><%= translation.source_lang %></td>
        <td><%= translation.priority %></td>
        <td><%= translation.original_content %></td>
        <td><%= translation.translated_contents %></td>
        <td><%= link_to 'Show', translation %></td>
        <td><%= link_to 'Edit', edit_translation_path(translation) %></td>
        <td><%= link_to 'Destroy', translation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

